<UserControl x:Class="Pireflix.EpisodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pireflix"
             mc:Ignorable="d" d:DesignWidth="955" Height="200" MouseEnter="EpisodeControl_MouseEnter" MouseLeave="EpisodeControl_MouseLeave">
	<Viewbox>
		<Border x:Name="border" BorderThickness="0" BorderBrush="DarkRed" Width="955" Height="200">
			<Grid>
				<TextBlock x:Name="titleBlock" HorizontalAlignment="Left" Margin="317,10,0,0" Foreground="White" TextAlignment="Center" FontSize="22" FontFamily="Arial" TextWrapping="Wrap" VerticalAlignment="Top" Height="34" Width="628"/>
				<TextBlock x:Name="descriptionBlock" HorizontalAlignment="Left" Margin="317,50,0,0" Foreground="White" TextAlignment="Left" FontSize="16" FontFamily="Arial" TextWrapping="Wrap" VerticalAlignment="Top" Height="150" Width="628"/>
				<Image x:Name="episodeImage" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="300"/>
			</Grid>
		</Border>
	</Viewbox>
</UserControl>
