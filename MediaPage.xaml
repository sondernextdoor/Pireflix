<Page x:Class="Pireflix.MediaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pireflix"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920" x:Name="mediaPage" 
      Title="MediaPage">

	<Canvas x:Name="mediaCanvas" Background="Black">
		<MediaElement x:Name="mediaPlayer" HorizontalAlignment="Left" Height="1080" VerticalAlignment="Top" Width="1920" LoadedBehavior="Manual"/>
	</Canvas>
</Page>
